{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*",
    "src/svelte.config.js"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "es2022",
    "moduleResolution": "Node",
    "types": [
      "node",
      "vite/client",
      "svelte",
    ],
    "paths": {
      "$lib/*": [
        "../node_modules/pcall/src/lib/*"
      ],
    }
  }
}