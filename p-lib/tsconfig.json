{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@configs/*": [
        "configs/*"
      ],
      "@packname/*": [
        "*"
      ]
    }
  }
}